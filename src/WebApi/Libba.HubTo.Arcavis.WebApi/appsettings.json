{
  "ConnectionStrings": {
    "PostgreSqlConnection": "Server=localhost;Port=5432;Database=arcavis;User Id=arcavis_user;Password=ArcavisPass;",
    "Redis": "localhost:6379,password=ArcavisPass,abortConnect=false"
  },
  "JwtSettings": {
    "Issuer": "your_issuer",
    "Audience": "your_audience",
    "SecretKey": "super_secret_key_that_is_long_enough_to_be_secure",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "arcavis-log-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "templateName": "arcavis-serilog-template"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}